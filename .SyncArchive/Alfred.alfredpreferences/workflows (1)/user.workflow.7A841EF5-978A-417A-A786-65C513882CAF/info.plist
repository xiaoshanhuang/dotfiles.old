$w = new Workflows( 'jdfwarrior.faves' );

$del  = "{query}";
$file = $w-&gt;data().'/favorites.json';
$favs = $w-&gt;read( $file, true );

if ( $favs ):
	$i = 0;
	while( $fav = $favs[$i] ):
		if ( $del == $fav ):
			unset( $favs[$i] );
			echo 'Removed '.$del.' from favorites';
			$w-&gt;write( $favs, $file );
			break;
		endif;
		$i++;
	endwhile;
else:
	echo 'Favorites couldn\'t be located. Nothing deleted.';
endif;</string>
