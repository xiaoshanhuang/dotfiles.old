				<string>require('workflows.php');
$w = new Workflows( 'jdfwarrior.faves' );

$list = $w-&gt;data().'/favorites.json';

$filter = "{query}";

if ( file_exists( $list ) ):
	$favs = $w-&gt;read( $list, true );
	if ( count( $favs ) &gt; 0 ):
		foreach( $favs as $fav ):
			if ($filter &amp;&amp; strpos(strtolower($fav),strtolower($filter)) === false) continue;
